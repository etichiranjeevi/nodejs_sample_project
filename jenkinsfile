pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/etichiranjeevi/nodejs_sample_project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to EC2') {
            steps {
                // Copy project files to target EC2
                sh 'scp -o StrictHostKeyChecking=no -r * ubuntu@3.88.212.66:/home/deploy/shopping-app/'

                // Restart app with pm2
                sh '''
                ssh ubuntu@3.88.212.66 << 'EOL'
                  cd /home/deploy/shopping-app
                  npm install
                  pm2 stop shopping-app || true
                  pm2 start app.js --name shopping-app
                EOL
                '''
            }
        }
    }
}
